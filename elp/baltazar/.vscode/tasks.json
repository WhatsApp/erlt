{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": "build",
            "problemMatcher": ["$tsc"],
            "label": "Client Build",
            "detail": "tsc -b"
        },
        {
            "type": "cargo",
            "command": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "Server Build"
        },
        {
            "label": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Server Build", "Client Build"]
        }
    ],
}
