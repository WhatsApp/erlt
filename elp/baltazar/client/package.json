{
    "name": "baltazar",
    "description": "VSCode client for Baltazar Language Server",
    "author": "Michał Muskała <micmus@whatsapp.com>",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.52.0"
    },
    "dependencies": {
        "typescript": "^4.1.3",
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.52.0",
        "typescript": "^4.0.2",
        "vscode-test": "^1.3.0"
    },
    "activationEvents": [
        "onLanguage:erlang"
    ],
    "contributes": {
        "languages": [
            {
                "id": "erlang",
                "aliases": [
                    "Erlang"
                ],
                "extensions": [
                    ".erl",
                    ".hrl",
                    ".src",
                    ".escript",
                    ".config"
                ]
            }
        ]
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    }
}
