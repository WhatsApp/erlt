{project_app_dirs, [
    "dev",
    "elm_core",
    "pattern",
    "dev2",
    "pos"
]}.

{checkouts_dir, ["../.."]}.

% TODO: 'erlt' is a better name
{plugins, [erltc]}.

% classic erlang
{erl_opts, [debug_info, report_warnings]}.
{provider_hooks, [{post, [
                          {compile, {erlt, compile}},
                          {clean, {erlt, clean}}
                      ]}]}.

% erlt
{erlt_opts, [debug_info, report_warnings]}.

{profiles, [
    {ir, [
        {erlt_opts, [
            'P',
            report_warnings,
            % this option reduces churn in our snapshot tests:
            % error messages and ir have module name, not path
            deterministic
        ]}
    ]}
]}.
