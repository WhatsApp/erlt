-file("struct_mod03.erl", 1).

-module(struct_mod03).

-export([expr/0,pattern/1,guard/1,field/1]).

expr() ->
    {'$#struct_mod02:foo'}.

pattern({'$#struct_mod02:foo'}) ->
    ok.

guard(Value) when Value =:= {'$#struct_mod02:foo'} ->
    ok.

field(Value) when element(2, Value) =:= 1 ->
    case Value of
        {'$#struct_mod02:bar', _, StructGenVar@0@b} ->
            StructGenVar@0@b;
        _ ->
            error({badstruct, '$#struct_mod02:bar'})
    end.



