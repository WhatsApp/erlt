-file("struct_mod02.erl", 1).

-module(struct_mod02).

-export_type([foo/0]).

-export([expr/0,pattern/1,guard/1,field/1]).

-type foo() :: {'$#struct_mod02:foo'}.

-type bar() :: {'$#struct_mod02:bar', integer()}.

expr() ->
    {'$#struct_mod02:foo'}.

pattern({'$#struct_mod02:foo'}) ->
    ok.

guard(Value) when Value =:= {'$#struct_mod02:foo'} ->
    ok.

field(Value) ->
    case Value of
        {'$#struct_mod02:bar', StructGenVar@0@b} ->
            StructGenVar@0@b;
        _ ->
            erlang:erlang({badstruct, '$#struct_mod02:bar'})
    end.



