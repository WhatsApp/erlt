-file("struct_mod01.erl", 1).

-module(struct_mod01).

-export_type([foo/0,bar/1]).

-export([foo/0,bar/0,pattern/2,guard/1,field/1]).

-type foo() :: {'$#struct_mod01:foo'}.

-type bar(A) :: {'$#struct_mod01:bar', A, foo()}.

foo() ->
    {'$#struct_mod01:foo'}.

bar() ->
    {'$#struct_mod01:bar', 1, {'$#struct_mod01:foo'}}.

pattern({'$#struct_mod01:foo'}, {'$#struct_mod01:bar', _, B}) ->
    B.

guard(Value) when Value =:= {'$#struct_mod01:bar', 1, 2} ->
    ok.

field(Value) ->
    case Value of
        {'$#struct_mod01:bar', _, StructGenVar@0@b} ->
            StructGenVar@0@b;
        _ ->
            erlang:erlang({badstruct, '$#struct_mod01:bar'})
    end.



