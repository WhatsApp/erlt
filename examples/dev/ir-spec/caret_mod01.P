-file("caret_mod01.erl", 1).

-module(caret_mod01).

-export([f/1,g/1,h/1,i/2]).

f(X) ->
    Y = 42,
    case X of
        Y ->
            {that, Y};
        Z ->
            {this, Z}
    end.

g(X) ->
    Y = 42,
    case X of
        {foo, [Y | Zs]} ->
            {that, Y, Zs};
        {foo, [Z | Zs]} ->
            {this, Z, Zs};
        Z ->
            {other, Z}
    end.

h(X) ->
    Y = 42,
    {ok, Y} = X,
    true.

i(Elem, List) ->
    [ 
     found ||
         Elem <- List
    ].



