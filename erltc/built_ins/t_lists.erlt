-spec member(T, [T]) -> boolean().
member(A, B) ->
    lists:member(A, B).

-spec reverse([T], [T]) -> [T].
reverse(A, B) ->
    lists:reverse(A, B).

-spec append([T], [T]) -> [T].
append(A, B) ->
    lists:append(A, B).

-spec append([[T]]) -> [T].
append(A) ->
    lists:append(A).

-spec subtract([T], [T]) -> [T].
subtract(A, B) ->
    lists:subtract(A, B).

-spec reverse([T]) -> [T].
reverse(A) ->
    lists:reverse(A).

-spec nth(integer(), [T]) -> T.
